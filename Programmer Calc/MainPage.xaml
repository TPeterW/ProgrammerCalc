                           Grid.Row="0"
                           Grid.ColumnSpan="4"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Width="Auto"
                           Margin="10,0,0,0"
                           Style="{StaticResource numBoxStyle}"/>

                <TextBlock x:Name="displayResultTextBlock" 
                           Text="100"
                           Grid.Row="1"
                           Grid.ColumnSpan="4"
                           VerticalAlignment="Center"
                           TextAlignment="Right" 
                           Margin="3,0,3,20" 
