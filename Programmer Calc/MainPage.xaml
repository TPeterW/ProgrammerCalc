                              Tag="deci"
                              FontSize="24"
                              Grid.Row="2"
                              Grid.Column="0"
                              Content="Deci"
                              IsChecked="True"
                              IsTapEnabled="True"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch"
                              Background="BlueViolet"
                              BorderThickness="1"
                              BorderBrush="DeepSkyBlue"
                              HorizontalContentAlignment="Stretch"
                              Tapped="arieTapped"/>
                
                <ToggleButton x:Name="Octa" 
                              Tag="octa"
                              FontSize="24"
                              Grid.Row="2"
                              Grid.Column="1"
                              Content="Octa"
                              IsChecked="False"
                              IsTapEnabled="True"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch"
                              Background="BlueViolet"
                              BorderThickness="1"
                              BorderBrush="DeepSkyBlue"
                              HorizontalContentAlignment="Stretch"
                              Tapped="arieTapped"/>

                <ToggleButton x:Name="Hexa" 
                              Tag="hexa"
                              FontSize="24"
