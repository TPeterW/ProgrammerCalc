                              FontSize="24"
                              Grid.Row="2"
                              Grid.Column="3"
                              Content="Bina"
                              IsChecked="False"
                              IsTapEnabled="True"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch"
                              Background="BlueViolet"
                              BorderThickness="1"
                              BorderBrush="DeepSkyBlue"
                              HorizontalContentAlignment="Stretch"
                              Tapped="arieTapped"/>

