<Page
    x:Class="Programmer_Calc.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Programmer_Calc"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="numBoxStyle">
            <Setter Property="FontSize" Value="36" />
            <Setter Property="FontFamily" Value="Arial" />
        </Style>

        <!--upper half-->
        <Storyboard x:Name="showBinaryInput">
            <DoubleAnimation Storyboard.TargetName="numberPads"
                             Storyboard.TargetProperty="Opacity"
                             From="1"
                             To="0"
                             Duration="0:0:0.5"/>
            
            <DoubleAnimation Storyboard.TargetName="threeDisplays"
                             Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.5" />

            <DoubleAnimation Storyboard.TargetName="binaryDisplay"
                             Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.5" />

            <DoubleAnimation Storyboard.TargetName="otherAriesDisplay"
                             Storyboard.TargetProperty="Opacity"
                             From="1"
                             To="0"
                             Duration="0:0:0.5" />

            <!--TODO: Missing three lines of display, to be added-->
        </Storyboard>
        <Storyboard x:Name="hideBinaryInput">
            <DoubleAnimation Storyboard.TargetName="numberPads"
                             Storyboard.TargetProperty = "Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.5"/>

            <DoubleAnimation Storyboard.TargetName="threeDisplays"
                             Storyboard.TargetProperty="Opacity"
                             From="1"
                             To="0"
                             Duration="0:0:0.5" />

            <DoubleAnimation Storyboard.TargetName="binaryDisplay"
                             Storyboard.TargetProperty="Opacity"
                             From="1"
                             To="0"
                             Duration="0:0:0.5" />

            <DoubleAnimation Storyboard.TargetName="otherAriesDisplay"
                             Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.5" />
        </Storyboard>
        
        <!--lower half-->
        <Storyboard x:Name="showNumberPadDeci">
            <DoubleAnimation Storyboard.TargetName="numberPadDeci"
                             Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.5" />
            <DoubleAnimation Storyboard.TargetName="numberPadHex"
                             Storyboard.TargetProperty="Opacity"
                             From="1"
                             To="0"
                             Duration="0:0:0.5" />
        </Storyboard>
        <Storyboard x:Name="hideNumberPadDeci">
            <DoubleAnimation Storyboard.TargetName="numberPadHex"
                             Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.5" />
            <DoubleAnimation Storyboard.TargetName="numberPadDeci"
                             Storyboard.TargetProperty="Opacity"
                             From="1"
                             To="0"
                             Duration="0:0:0.5" />
        </Storyboard>
        
    </Page.Resources>

